{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Median Rental Prices by Region from March 2019 to March 2021",
    "width": 400,
    "height": 400,
    "data": {"url": "https://raw.githubusercontent.com/ebud0001/fit3179-assignment2/main/data/VIC_Median_Rent.csv"},
    "encoding": {
        "x": {"field": "Period", "type": "ordinal",
        "sort": ["Mar-2019", "Jun-2019", "Sep-2019","Dec-2019", "Mar-2020", "Jun-2020", "Sep-2020", "Dec-2020", "Mar-2021"]},
        "y": {"field": "Median Rent", "type": "quantitative",
            "title": "Median Rent"},
        "color": {
        "condition": {
          "param": "hover",
          "field":"Locality",
          "type":"nominal"
        },
        "value": "grey"
      },
      "tooltip": [
        {"field": "Locality","type": "nominal", "title": "Locality"},
        {"field": "Median Rent", "type": "quantitative", "title": "Median Rent", "format": ","},
        {"field": "Period", "type": "ordinal", "title": "Period"}
        ],
      "opacity": {
        "condition": {
          "param": "hover",
          "value": 1
        },
        "value": 0.2
      }
    },
    "layer": [{
      "params": [{
        "name": "hover",
        "value": [{"Locality": "Inner Melbourne"}],
        "select": {
          "type": "point",
          "fields": ["Locality"],
          "on": "mouseover"
        }
      }],
      "mark": {"type": "line", "point": true,"strokeWidth": 8, "stroke": "transparent"}
    }, {
      "mark": "line"
    }
    ],
    "config": {"view": {"stroke": null}}
  }