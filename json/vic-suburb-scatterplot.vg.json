{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title":"Relationship between Median House Price Changes",
    "data": {"url": "https://raw.githubusercontent.com/ebud0001/fit3179-assignment2/main/data/VIC_House_Medians3rdQtr2020.csv"},
    "repeat": {
      "row": ["Change_Q4_2019", "Change_Q1_2020", "Change_Q2_2020","Change_Q3_2020"],
      "column": ["Change_Q4_2019", "Change_Q1_2020", "Change_Q2_2020","Change_Q3_2020"]
    },
    "spec": {
      "data": {"url": "https://raw.githubusercontent.com/ebud0001/fit3179-assignment2/main/data/VIC_House_Medians3rdQtr2020.csv"},
      "mark": "point",
      "params": [
        {
          "name": "brush",
          "select": {
            "type": "interval",
            "resolve": "union",
            "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
            "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
            "zoom": "wheel![event.shiftKey]"
          }
        },
        {
          "name": "grid",
          "select": {
            "type": "interval",
            "resolve": "global",
            "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
            "zoom": "wheel![!event.shiftKey]"
          },
          "bind": "scales"
        }
      ],
      "encoding": {
        "x": {"field": {"repeat": "column"}, "type": "quantitative"},
        "y": {
          "field": {"repeat": "row"},
          "type": "quantitative",
          "axis": {"minExtent": 30}
        },
        "color": {
          "condition": {
            "param": "brush",
            "field": "SUBURB",
            "type": "nominal"
          },
          "value": "grey"
        },
        "tooltip": [
            {"field": "SUBURB","type": "nominal", "title": "Suburb"},
            {"field":{"repeat": "row"}, "type": "quantitative", "format": ","},
            {"field": {"repeat": "column"}, "type": "ordinal"}
            ]
      }
    }
  }